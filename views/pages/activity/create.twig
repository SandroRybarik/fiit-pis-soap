{% extends "../../base.twig" %}

{% block content %}
<div class="container">
  <div class="col-md-6 offset-md-3">
    <form class="border p-3 bg-light" method="POST" action="/activity">
      <legend class="text-center mb-5"> Vytvorenie cvičenia </legend>
      <div class="form-group">
        <label for="name">Názov</label>
        <input name="name" id="name" type="text" class="form-control" required>
      </div>

      <div class="form-group">
        <label for="start_date">Začiatok cvičenia</label>
        <input name="start_date" id="start_date" type="datetime-local" class="form-control" required>
      </div>

      <div class="form-group">
        <label for="end_date">Koniec cvičenia</label>
        <input name="end_date" id="end_date" type="datetime-local" class="form-control" required>
      </div>

      <hr>

      <div class="form-group">
        <label for="trainer_id">Tréner</label>
        <select class="form-control" name="trainer_id" id="trainer_id" required>
          <option value="">Vyberte možnosť</option>
          {% for opt in trainers %}
            <option value="{{ opt.id }}">{{ opt.name|e }}</option>
          {% endfor %}
        </select>
      </div>

      <div class="form-group">
        <label class="" for="room_id">Miestnosť cvičenia</label>
        <select class="form-control" name="room_id" id="room_id" required>
          <option value="">Vyberte možnosť</option>
          {% for opt in rooms %}
            <option value="{{ opt.id }}">{{ opt.name|e }}</option>
          {% endfor %}
        </select>
      </div>

      <div class="form-group">
        <label class="" for="activity_type_id">Typ cvičenia</label>
        <select class="form-control" name="activity_type_id" id="activity_type_id" required>
          <option value="">Vyberte možnosť</option>
          {% for opt in activity_types %}
            <option value="{{ opt.id }}">{{ opt.name|e }}</option>
          {% endfor %}
        </select>
      </div>

      <div class="form-group">
        <label class="" for="branch_id">Pobočka, kde bude tréning prebiehať</label>
        <select class="form-control" name="branch_id" id="branch_id" required>
          <option value="">Vyberte možnosť</option>
          {% for opt in branches %}
            <option value="{{ opt.id }}">{{ opt.name|e }}</option>
          {% endfor %}
        </select>
      </div>

      <button type="submit" class="btn btn-primary mb-2">VYTVORIŤ CVIČENIE</button>
    </form>
  </div>
</div>  

{% endblock %}